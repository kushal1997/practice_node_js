<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Portfolio</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f4f4f4;
        }
        header {
            background-color: #333;
            color: #fff;
            padding: 1rem 0;
            text-align: center;
        }
        h1 {
            margin: 0;
            font-size: 2rem;
        }
        .container {
            width: 80%;
            margin: 2rem auto;
        }
        ul {
            list-style: none;
            padding: 0;
        }
        li {
            background-color: #fff;
            margin: 1rem 0;
            padding: 1rem;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            display: flex;
            align-items: center;
        }
        img {
            width: 100px;
            height: 100px;
            object-fit: cover;
            border-radius: 8px;
            margin-right: 1rem;
        }
        h2 {
            margin: 0;
            font-size: 1.5rem;
        }
        p {
            margin: 0.5rem 0;
        }
        a {
            display: inline-block;
            margin-top: 0.5rem;
            padding: 0.5rem 1rem;
            background-color: #007bff;
            color: #fff;
            text-decoration: none;
            border-radius: 4px;
        }
        a:hover {
            background-color: #0056b3;
        }
        form {
            background-color: #fff;
            padding: 1rem;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }
        form input, form textarea, form button {
            width: 100%;
            padding: 0.5rem;
            margin: 0.5rem 0;
            border: 1px solid #ccc;
            border-radius: 4px;
        }
        form button {
            background-color: #28a745;
            color: #fff;
            border: none;
        }
        form button:hover {
            background-color: #218838;
        }
    </style>
</head>
<body>
    <header>
        <h1>My Projects</h1>
    </header>
    <div class="container">
        <ul>
            <% projects.forEach(project => { %>
                <li>
                    <img src="<%= project.img %>" alt="<%= project.name %>">
                    <div>
                        <h2><%= project.name %></h2>
                        <p><%= project.description %></p>
                        <a href="<%= project.url %>">Live Demo</a>
                        <a href="<%= project.githubUrl %>">GitHub</a>
                    </div>
                </li>
            <% }) %>
        </ul>
        <form action="/add" method="POST" enctype="multipart/form-data">
            <input type="text" name="name" placeholder="Name" required>
            <input type="url" name="url" placeholder="URL" required>
            <input type="url" name="githubUrl" placeholder="GitHub URL" required>
            <textarea name="description" placeholder="Description" required></textarea>
            <input type="file" name="image" required>
            <input type="text" name="languages" placeholder='Languages (JSON format)' required>
            <button type="submit">Add Project</button>
        </form>
    </div>
</body>
</html>
